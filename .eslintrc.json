{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["react", "node"],
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:react/recommended"],
  "rules": {
    "node/no-deprecated-api": "warn"
  },
  "settings": {
    "react": { "version": "detect" }
  },
  "ignorePatterns": [
    "node_modules/**",
    "frontend/node_modules/**",
    "scripts/**",
    "test.js",
    "test3.js"
  ]
}
